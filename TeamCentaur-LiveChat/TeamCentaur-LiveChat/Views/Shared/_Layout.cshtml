<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendo")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav" id="menu">
                        <li>@Html.ActionLink("Tutorials", "Index", "Home", new { area = "" }, new { })</li>
                        <li>@Html.ActionLink("My Tutorials", "MyTutorials", "Tutorials", new { area = "" }, new { })</li>


                        <li>
                            Admin
                            <ul>
                                <li>@Html.ActionLink("Tutorials", "Index", "Admin", new { area = "Admin" }, new { })</li>
                                <li>@Html.ActionLink("Users(not implemented)", "About", "Admin", new { area = "" }, new { })</li>
                            </ul>
                        </li>
                    </ul>
                    @*@Html.Action("Search", "Home")*@
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script type="text/javascript">
        $("#menu").kendoMenu();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
