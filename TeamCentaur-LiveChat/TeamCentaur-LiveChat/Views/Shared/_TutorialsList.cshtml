@model IEnumerable<Crafter.Models.Tutorial>

<div class="tutorials-wrapper">
    @for (int i = 0; i < Model.Count(); i++)
    {
        if (i >= 15)
        {
            break;
        }

        var item = Model.ElementAt(i);
        <div class="row-fluid">
            <div class="tutorial-home">

                @if (Model.ElementAt(i).Image != null)
                {
                    <a href="@Url.Action("Details", new { id = item.Id})">
                        <img src="@item.Image" style="width:200px; height:200px" class="img-polaroid pull-left" alt="@item.Category.Name" />
                    </a>
                }

                <div class="tutorial-home-description pull-left">
                    <span class="home-tutorial-category">Category - @item.Category.Name</span>
                    <h2><a href="@Url.Action("Details", new { id = item.Id})">@Model.ElementAt(i).Title</a></h2>
                    <p class="tutorial-author-and-date">@item.User.UserName on @item.CreatedOn.ToString("dd-MMM-yyyy")</p>
                    @if (item.Description.Length >= 300)
                    {
                        <p class="tutorial-description">@item.Description.Substring(0, 200) ...</p>
                    }
                    else
                    {
                        <p class="tutorial-description">@item.Description</p>
                    }

                </div>
                <a href="@Url.Action("Details", new { id = item.Id})" class="k-button pull-right">View more</a>
                <div class="clearfix"></div>
            </div>
        </div>
    }
</div>