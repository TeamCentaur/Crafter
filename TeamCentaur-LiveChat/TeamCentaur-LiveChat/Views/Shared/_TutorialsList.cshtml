@model IEnumerable<Crafter.Models.Tutorial>

@for (int i = 0; i < Model.Count(); i++)
{
    var item = Model.ElementAt(i);

    <a class="span4" style=" text-decoration:none;" href="@Url.Action("Details", new { id = item.Id})">
        @if (Model.ElementAt(i).Image != null)
        {
            <img src="@item.Image" style="width:200px; height:200px" class="img-polaroid" alt="@item.Category" />
        }
        <div><span class="pull-left">@Model.ElementAt(i).Title</span></div>
    </a>
}