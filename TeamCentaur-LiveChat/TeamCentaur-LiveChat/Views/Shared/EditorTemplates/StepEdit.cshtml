@model TeamCentaur_LiveChat.Areas.Admin.ViewModels.StepDisplayModel

@Html.HiddenFor(model => model.Id)

<div class="control-group">
    @Html.LabelFor(model => model.Title, new { @class = "control-label" })
    <div class="controls">
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title, null, new { @class = "help-inline" })
    </div>
</div>

<div class="control-group">
    @Html.LabelFor(model => model.Content, new { @class = "control-label" })
    <div class="controls">
        @Html.EditorFor(model => model.Content)
        @Html.ValidationMessageFor(model => model.Content, null, new { @class = "help-inline" })
    </div>
</div>

<div class="control-group">
    @Html.LabelFor(model => model.Image, new { @class = "control-label" })
    <div class="controls">
        @(Html.Kendo().Upload()
            .Name("files")
            .Async(async =>
                {
                    async.AutoUpload(true);
                    async.Save("SaveStepImage", "Tutorials");
                })
        )
    </div>
</div>